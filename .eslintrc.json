{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },

  "rules": {
    "no-underscore-dangle": "off",
    "no-console": "off",
    "consistent-return": "off",
    "comma-dangle": "off",
    "semi": ["error", "never"]
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "camelcase": "off",
        "global-require":"off"
      }
    }
  ]
}
